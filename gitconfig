[user]
	name  = Tim Holt
	email = atimholt@gmail.com
[push]
	default = simple
[core]
	autocrlf = false
	editor = "nvim"
	excludesfile = ~/.gitignore_global
;[diff]
	;tool = "nvim -d"
;[difftool]

[diff]
	tool = vimdiff
	prompt = 0
[difftool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL

[merge]
	tool = vimdiff
	conflictstyle = diff3
	prompt = 0
[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

